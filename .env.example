# =============================================================================
# Autonomous Trading Bot Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Alpaca API (Required)
# -----------------------------------------------------------------------------
# Get your API keys from https://app.alpaca.markets/
ALPACA_API_KEY=your_alpaca_key
ALPACA_API_SECRET=your_alpaca_secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live
ALPACA_DATA_FEED=iex  # or "sip" if you have a funded account

# -----------------------------------------------------------------------------
# Trading Configuration
# -----------------------------------------------------------------------------
SYMBOLS=SPY,QQQ,AAPL,TSLA
TIMEFRAME=1Min
EMA_FAST=9
EMA_SLOW=21
ENABLE_STOCKS=true      # Set false for options-only mode
USE_SENTIMENT=false      # false = pure technical analysis mode
SENTIMENT_THRESHOLD=0.15 # Only used when USE_SENTIMENT=true

# -----------------------------------------------------------------------------
# Risk Management
# -----------------------------------------------------------------------------
MAX_DAILY_LOSS_USD=250      # Stop trading if daily loss exceeds this
MAX_POSITION_VALUE_USD=2000 # Maximum position size in dollars
RISK_PER_TRADE_PCT=0.01     # Risk 1% of equity per trade
STOP_LOSS_PCT=0.005         # 0.5% stop loss
TAKE_PROFIT_PCT=0.01        # 1.0% take profit

# -----------------------------------------------------------------------------
# RSS Feeds (News Ingestion)
# -----------------------------------------------------------------------------
# Comma-separated list of RSS feed URLs
# Only used when USE_SENTIMENT=true
RSS_FEEDS=https://feeds.a.dj.com/rss/RSSMarketsMain.xml,https://www.cnbc.com/id/10000664/device/rss/rss.html

# -----------------------------------------------------------------------------
# X/Twitter API (Basic Tier - $200/mo)
# -----------------------------------------------------------------------------
# Get your Bearer Token from https://developer.twitter.com/
# Only used when USE_SENTIMENT=true
X_BEARER_TOKEN=your_x_bearer_token
X_HANDLES=deltaone,elonmusk  # Comma-separated Twitter handles to monitor

# -----------------------------------------------------------------------------
# Grok / xAI Sentiment (Free $175/mo credits with data sharing)
# -----------------------------------------------------------------------------
# Get your API key from https://console.x.ai/
# Only used when USE_SENTIMENT=true
GROK_API_KEY=your_xai_api_key
GROK_BASE_URL=https://api.x.ai/v1  # xAI API base URL
GROK_MODEL=grok-3-fast  # Fast model for sentiment analysis

# -----------------------------------------------------------------------------
# Options Trading
# -----------------------------------------------------------------------------
ENABLE_OPTIONS=false          # Set to true to enable options trading
OPTION_DTE_MAX=7              # Maximum days to expiration
OPTION_STRIKE_TOLERANCE=0.03  # Pick strikes within 3% of underlying
OPTION_ORDER_QTY=1            # Number of contracts per trade
OPTION_SIDE_ON_BULL=call      # Trade calls on bullish signals
OPTION_SIDE_ON_BEAR=put       # Trade puts on bearish signals

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_JSON=false  # Set to true for JSON structured logging (production)
